{
  "jsc": {
    "baseUrl": ".",
    "parser": {
      "syntax": "typescript",
      "tsx": true,
      "decorators": true
    },
    "transform": {
      "legacyDecorator": true,
      "decoratorMetadata": true
    },
    "target": "es2018",
    "paths": {
      "@versea/*": ["./packages/*/src/index.ts"]
    }
  },
  "module": {
    "type": "commonjs",
    "noInterop": true
  }
}
